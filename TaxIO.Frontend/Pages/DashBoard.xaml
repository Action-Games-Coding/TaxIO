<Page x:Class="TaxIO.Frontend.Pages.DashBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaxIO.Frontend.Pages"
      xmlns:controls="clr-namespace:TaxIO.Frontend.UserControls"
      mc:Ignorable="d" HorizontalAlignment="Left" VerticalAlignment="Center"
      d:DesignHeight="900" d:DesignWidth="1080"
      Title="DashBoard">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="500"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>

        <controls:PieChart01 x:Name="PieChart01" Width="360" Grid.Column="0" Grid.Row="0"/>

        <Border Grid.Row="0" Grid.Column="2"
            Width="550" Height="230"
            Margin="0,50,0,0"
            BorderBrush="LightGray" BorderThickness="1">
            <TextBlock Text="Čárový graf" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Row="2" Grid.ColumnSpan="3"
            Margin="50,0,50,50"
            BorderBrush="LightGray" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Latest income and expenses" FontWeight="Bold" Margin="10"/>
                <Border Background="#FF20B2AA" Margin="10,0" Height="40">
                    <Grid>
                        <TextBlock Text="Lorem ipsum" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBlock Text="$25 px" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    </Grid>
                </Border>
                <Border Background="#FF20B2AA" Margin="10,5" Height="40">
                    <Grid>
                        <TextBlock Text="Lorem ipsum" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBlock Text="40 px" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
                    </Grid>
                </Border>
                <Border Background="#FF20B2AA" Margin="10,5" Height="40">
                    <TextBlock Text="Lorem ipsum" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </Border>
                <Border Background="#FF20B2AA" Margin="10,5" Height="40">
                    <TextBlock Text="Lorem ipsum" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </Border>
                <Border Background="#FF20B2AA" Margin="10,5" Height="40">
                    <TextBlock Text="Lorem ipsum" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </Border>
                <Border Background="#FF20B2AA" Margin="10,5" Height="40">
                    <TextBlock Text="Lorem ipsum" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
