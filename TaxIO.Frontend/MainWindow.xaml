<Window x:Class="TaxIO.Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaxIO.Frontend"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="MainWindow" Height="960" Width="1080">
    
    <Grid Background="{DynamicResource BackgroundBrushDark}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0" Background="{DynamicResource BackgroundBrushDark2}">

            <!-- Položky menu -->
            <ToggleButton Margin="10,0,80,0" Content="📊 Dashboard" Style="{DynamicResource NavButtonStyle}" IsChecked="True"/>
            <ToggleButton Margin="0,0,80,0" Content="📥 Příjmy" Style="{DynamicResource NavButtonStyle}" />
            <ToggleButton Margin="0,0,80,0" Content="📤 Výdaje" Style="{DynamicResource NavButtonStyle}" />
            <ToggleButton Margin="0,0,80,0" Content="🔄 Inventář" Style="{DynamicResource NavButtonStyle}" />
            <ToggleButton Margin="0,0,80,0" Content="📈 Grafy" Style="{DynamicResource NavButtonStyle}" />
            <ToggleButton Margin="0,0,80,0" Content="🔎 Kontrola" Style="{DynamicResource NavButtonStyle}" />
            <ToggleButton Margin="0,0,80,0" Content="⚙️ Nastavení" Style="{DynamicResource NavButtonStyle}" />

        </StackPanel>

        <Page x:Name="MainPage" Grid.Row="1" Background="{DynamicResource BackgroundBrushDark}"/>
    </Grid>
</Window>
