<UserControl x:Class="TaxIO.Frontend.UserControls.PieChart01"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaxIO.Frontend.UserControls"
             mc:Ignorable="d" MinHeight="228" MinWidth="228"
             d:DesignHeight="228" d:DesignWidth="228">
    <Grid>
        <Canvas x:Name="ChartCanvas" MouseLeave="ChartCanvas_MouseLeave" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Border Width="150" Height="150" Background="{DynamicResource BackgroundBrushDark}" CornerRadius="150" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="LegendTextLine1"
                           FontSize="25"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           TextAlignment="Center" MaxWidth="125" TextWrapping="Wrap"
                           FontWeight="Bold"/>

                <TextBlock x:Name="LegendTextLine2"
                           FontSize="25"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           TextAlignment="Center" MaxWidth="125" TextWrapping="Wrap"
                           FontWeight="Bold"/>
            </StackPanel>
            

        </Border>
    </Grid>
</UserControl>
