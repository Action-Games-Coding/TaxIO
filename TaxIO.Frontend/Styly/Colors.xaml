<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Hlavní barvy -->
    <Color x:Key="PrimaryColor">#FF009D00</Color>
    <!-- Výchozí modrá -->
    <Color x:Key="BackgroundColorLight">#FFF5F5F5</Color>
    <Color x:Key="BackgroundColorDark">#FF1E1E1E</Color>
    
    <Color x:Key="ForegroundColorLight">#FF000000</Color>
    <Color x:Key="ForegroundColorDark">#FFFFFFFF</Color>
    
    <Color x:Key="BackgroundColorLight2">#FFF5F5F5</Color>
    <Color x:Key="BackgroundColorDark2">#FF3C3C3C</Color>
    

    <!-- Brush pro binding -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="BackgroundBrushLight" Color="{StaticResource BackgroundColorLight}" />
    <SolidColorBrush x:Key="BackgroundBrushDark" Color="{StaticResource BackgroundColorDark}" />
    <SolidColorBrush x:Key="ForegroundBrushLight" Color="{StaticResource ForegroundColorLight}" />
    <SolidColorBrush x:Key="ForegroundBrushDark" Color="{StaticResource ForegroundColorDark}" />
    <SolidColorBrush x:Key="BackgroundBrushLight2" Color="{StaticResource BackgroundColorLight2}" />
    <SolidColorBrush x:Key="BackgroundBrushDark2" Color="{StaticResource BackgroundColorDark2}" />
</ResourceDictionary>